RejoinButton.Position = UDim2.new(0.2,0,0.75,0)
RejoinButton.Text = "Rejoin"
RejoinButton.TextColor3 = Color3.fromRGB(255,255,255)
RejoinButton.BackgroundColor3 = Color3.fromRGB(80,0,160)
