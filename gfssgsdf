selectedFrame.BorderSizePixel = 0
selectedFrame.Parent = rightPanel
Instance.new("UICorner", selectedFrame).CornerRadius = UDim.new(0,8)

local selectedTitle = Instance.new("TextLabel")
selectedTitle.Size = UDim2.new(1,0,0.3,0)
selectedTitle.Position = UDim2.new(0,0,0,5)
